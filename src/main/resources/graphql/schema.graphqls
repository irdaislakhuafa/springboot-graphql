type Query {
  getBooks: [Book!]
  getAuthors: [Author!]
}

type Mutation {
  saveBook(newBook: NewBook!): Book!
}

type Book {
  id: ID!
  name: String!
  pageCount: Int!
  authorId: ID!
}
input NewBook {
  name: String!
  pageCount: Int!
  authorId: ID!
}

type Author {
  id: ID!
  firstName: String!
  lastName: String!
}
